
# ================================================
# File: backend/.env.example
# Backend specific environment variables

# FastAPI Settings
API_V1_STR=/api/v1
PROJECT_NAME=CAP Platform
VERSION=1.0.0
DESCRIPTION=Conversational AI Platform
CORS_ORIGINS=["http://localhost:3000", "http://localhost:80"]

# Database Configuration
POSTGRES_SERVER=postgres
POSTGRES_USER=cap_user
POSTGRES_PASSWORD=cap_password
POSTGRES_DB=cap_platform
POSTGRES_PORT=5432

# MongoDB Configuration
MONGODB_SERVER=mongodb
MONGODB_PORT=27017
MONGODB_USER=cap_user
MONGODB_PASSWORD=cap_password
MONGODB_DB=cap_conversations

# Redis Configuration
REDIS_SERVER=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_SERVER=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=cap_user
RABBITMQ_PASSWORD=cap_password
RABBITMQ_VHOST=cap_vhost

# Qdrant Configuration
QDRANT_SERVER=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# File Processing
UPLOAD_DIR=/app/uploads
TEMP_DIR=/tmp
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# AI Model Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002
DEFAULT_CHAT_MODEL=gpt-3.5-turbo

# Vector Database
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7